<h6 class="display-4">Checkout</h6>
<hr />
<div class="row">
    <div class="col-md-8">
        <h6>Order Details</h6>
        <form asp-controller="Card" asp-action="CheckOut" method="post">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label>First Name:</label>
                    <input type="text" name="firstName" class="form-control" value="" />
                </div>
                <div class="col-md-6">
                    <label>Last Name:</label>
                    <input type="text" name="lastName" class="form-control" value="" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-12">
                    <label>Address:</label>
                    <textarea name="address" class="form-control"></textarea>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <label>City:</label>
                    <input type="text" name="city" class="form-control"/>
                </div>
                <div class="col-md-4">
                    <label>Phone:</label>
                    <input type="text" name="phone" class="form-control"/>
                </div>
                <div class="col-md-4">
                    <label>Email:</label>
                    <input type="email" name="email" class="form-control"/>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <h6>Order Summers</h6>
        <span>Summary Info</span>
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between">
                <div>
                    <h6>Product1</h6>
                </div>
                <span>5000</span>
                <span>2</span>
                <span>10000</span>
            </li>
            <li class="list-group-item d-flex justify-content-between">
                <div>
                    <h6>Product2</h6>
                </div>
                <span>200</span>
                <span>6</span>
                <span>1200</span>
            </li>
            <li class="list-group-item d-flex justify-content-between">
                <span>Toplam:(TL)</span>
                <strong class="text-break">11200</strong>
            </li>
        </ul>
    </div>
</div>